<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#001DBD</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/page_background</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/page_background</item>
        <!-- Customize your theme here. -->
<!--        <item name="pageBackground">@color/page_background_night</item>-->

        <!-- This is for enabling transitions  -->
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterTransition">@transition/trans_anim</item>
        <item name="android:windowExitTransition">@transition/trans_anim</item>
    </style>

    <!--    Light mode  -->

    <!--    screen background -->
    <style name="SCREEN">
        <item name="android:background">@color/page_background</item>
    </style>

<!--    Text color-->

    <style name="TEXT">
        <item name="android:textColor">#000</item>
    </style>

<!--    button background-->
    <style name="BUTTON">
        <item name="android:background">@android:color/holo_blue_dark</item>
        <item name="android:textColor">#FFF</item>
    </style>

</resources>
